{
    "build": {
        // Path is relative to the devcontainer.json file.
        "dockerfile": "Dockerfile"
    },
    // Configure tool-specific properties.
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter"
            ],
            // Set *default* container specific settings.json values on container create.
            "settings": {
                "[python]": {
                    "defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python3.11",
                    "terminal.activateEnvironment": true,
                    "terminal.activateEnvInCurrentTerminal": true,
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnSave": true,
                    "analysis.typeCheckingMode": "strict",
                    "analysis.autoImportCompletions": true,
                    "analysis.diagnosticSeverityOverrides": {
                        "reportUnusedImport": "warning",
                        "reportUnusedVariable": "warning"
                    }
                },
                "editor.insertSpaces": true,
                "editor.tabSize": 4
            }
        }
    },
    "postCreateCommand": "python3.11 -m venv .venv && . .venv/bin/activate && pip install -r requirements.txt",
    "postStartCommand": "pg_ctlcluster 16 main restart"
}